PROXY_ENDPOINT=rpcs://proxy.iriswallet.com/0.2/json-rpc
INDEXER_URL=tcp://electrum.rgbtools.org:50041
NETWORK=3

# PostgreSQL configuration (for refresh queue and watchers)
# Local PostgreSQL:
POSTGRES_URL=postgresql://postgres:postgres@localhost:5432/rgb_node

# Remote PostgreSQL:
# POSTGRES_URL=postgresql://user:password@host:5432/rgb_node

# PostgreSQL connection pool settings
POSTGRES_MIN_CONNECTIONS=2
POSTGRES_MAX_CONNECTIONS=10

# Refresh worker configuration
REFRESH_INTERVAL=100
MAX_REFRESH_RETRIES=10
RETRY_DELAY_BASE=5
POLL_INTERVAL=1
WATCHER_TTL=86400
WORKER_THREADS=4  # Number of parallel job processors (different wallets can run in parallel)

# Recovery settings
ENABLE_RECOVERY=true
